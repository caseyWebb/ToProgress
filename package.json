{
  "name": "toprogress2",
  "version": "1.0.0",
  "description": "A lightweight, no-dependency top progress bar library",
  "main": "dist/umd/index.js",
  "module": "dist/es/index.js",
  "typings": "dist/es/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run build:es && yarn run build:umd",
    "build:demo": "parcel build --out-dir demo/dist --public-url https://caseyWebb.github.io/toprogress2 demo/index.html",
    "build:es": "tsc --declaration --module es2015 --outDir dist/es",
    "build:umd": "tsc --module umd --outDir dist/umd",
    "lint": "tslint -p ./",
    "prepush": "yarn lint && yarn update:demo",
    "prepublishOnly": "yarn test && yarn build",
    "start:demo": "parcel demo/index.html",
    "test": "jest",
    "update:demo": "yarn build:demo && git add -f demo/dist && (git commit -m \"chore(demo)\" || true)"
  },
  "keywords": [
    "topbar",
    "progress",
    "progressbar"
  ],
  "author": "Randy Lu <randypriv@gmail.com>",
  "contributors": [
    "Casey Webb <notcaseywebb@gmail.com>"
  ],
  "license": "MIT",
  "repository": "caseyWebb/ToProgress",
  "bugs": "https://github.com/caseyWebb/ToProgress/issues",
  "homepage": "https://github.com/caseyWebb/ToProgress#readme",
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "parcel-bundler": "^1.4.1",
    "ts-jest": "^22.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testRegex": ".*test\\.ts?$",
    "transform": {
      "^.+\\.[tj]sx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
